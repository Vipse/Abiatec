@import url('https://fonts.googleapis.com/css?family=Montserrat:300,400,600,700');
@font-face {
  font-family: 'icomoon';
  src:  url('fonts/icomoon.eot?g837v8');
  src:  url('fonts/icomoon.eot?g837v8#iefix') format('embedded-opentype'),
          url('fonts/icomoon.ttf?g837v8') format('truetype'),
          url('fonts/icomoon.woff?g837v8') format('woff'),
          url('fonts/icomoon.svg?g837v8#icomoon') format('svg');
  font-weight: normal;
  font-style: normal;
}

html, body, div, span, applet, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
a, abbr, acronym, address, big, cite, code,
del, dfn, em, img, ins, kbd, q, s, samp,
small, strike, strong, sub, sup, tt, var,
b, u, i, center,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td,
article, aside, canvas, details, embed,
figure, figcaption, footer, header, hgroup,
menu, nav, output, ruby, section, summary,
time, mark, audio, video
  margin 0
  padding 0
  border 0
  font-size 100%
  font inherit
  vertical-align baseline
button:focus
  outline none
/* HTML5 display-role reset for older browsers */
article, aside, details, figcaption, figure,
footer, header, hgroup, menu, nav, section
  display block

body
  line-height 1

ol, ul
  list-style none

blockquote, q
  quotes none

blockquote:before, blockquote:after, q:before, q:after
  content: ''
  content: none

table
  border-collapse collapse
  border-spacing 0





.formConsult
  background url("../img/arrowBgForm.png") -300px 0/54% 100%, linear-gradient(135deg, #a2bbed 0%, #7198e1 100%) 0 0
  background-repeat no-repeat
  .closeForm
    width 35px
    height 35px
    border-radius 0 0 8px 8px
    background #ef323b url("../img/closeForm.png") 50% 50% no-repeat
    border none
    cursor pointer
  .getConsultText
    align-self: center;
    font-size 20px
    line-height 36px
    color white
    font-weight 700
    padding-bottom 30px;
    div:nth-child(2)
      font-weight 300
  .fillTheFormText
    font-size 18px
    font-weight 600
    color #2b4c8d
    margin 10px 0 20px 0
    display inline-block
  form
    input, textarea
      width 100%
      font-size 14px
      color #b0b0b0
      font-weight 300
      border none
      padding 20px
      border-radius 7px
    input[type="text"]
      height 40px
      box-shadow inset 3px 3px 5px 0 #c9c9c9
      margin-bottom 10px
    textarea
      box-shadow inset 3px 3px 5px 0 #c9c9c9
      resize none
      height 130px
      margin-bottom 20px
    input[type="submit"]
      background #ef323b
      color white
      font-size 18px
      font-weight 600
      padding 0
      height 50px
      cursor pointer
      margin-bottom 50px
  .manager
    display flex
    background url("../img/devushka.png") 0 100% no-repeat
    .workerInfo
      align-self: center;
      color #2b4c8d
      line-height 20px
      .workerName
        font-size 18px
        font-weight 600
      .workerSpeciality
        font-size 14px
        font-weight 400

.mobileMenuWrapper
  position fixed
  top 0
  bottom 0
  right 0
  left 0
  z-index 1021
  background rgba(0,0,0,0.6)
  .slideMenuMobile
    width 250px
    position fixed
    height 100%
    top 0
    bottom 0
    left 0
    background white
    z-index 1022
    display flex
    flex-direction column
    padding 20px
    .closeMenu
      width 20px
      height 20px
      background black
      display block
      align-self flex-end
      border none
      cursor pointer
      background url("../img/closeMenu.png") 50% 50% no-repeat
    ul
      align-self center
      margin-top 30px
      li
        border-bottom 1px solid #d2d2d2
        cursor pointer
        a
          text-decoration none
          color #393939
          font-weight 400
          font-size 18px
          line-height 25px
          display block
          padding 10px 0
body
  font-family "Montserrat", sans-serif

.container-fluid.header
  background white
  padding 0
  margin 0
  border-radius 0

header
  padding 20px 0
  align-items center
  background #fff
  .logoImage
    width 90%

.headerMenu
  padding-top 17px
  display flex
  justify-content center
  ul
    display block
    li
      display inline-block
      margin 0 8px
      .menuLink
        color #393939
        font-size 18px
        text-decoration none
        &:hover
          color #aaaaaa
.burger
  cursor pointer
  width 32px
  height 32px
  background url("../img/burger.png") no-repeat
  border none
  padding 0
  outline none

.phone
  display block
  font-weight 600
  font-size 19px
  line-height 36px
  color #303030
  text-decoration none
  &:hover
    text-decoration none
    color #aaaaaa
.phonesMobileVersion
  display none
  padding 0
  .phones
    background #e9e9e9

.askQuestionButton
  width 100%
  height 50px
  background #ef323b
  border-radius 10px
  border 0
  color white
  outline none
  font-weight 600
  cursor pointer
  font-size 16px
  &.arrow:after
    content url("../img/arrow.png")
    display inline-block
    margin-left 5px
  &.cross
    background white
    color #ef323b
    border 3px solid #ef323b
    &:after
      content url("../img/redCross.png")
.showPhones
  width 50px
  height 50px
  cursor pointer
  background #e9e9e9
  font-size 0
  border 0
  &:after
    content: "\e90c";
    font-family: "icomoon";
    font-size: 45px;
    color: #bcbcbc
    font-weight: 400;
    margin-left 0

.banner
  height 590px
  padding 130px 20px
  .care
    font-size 56px
    line-height 80px
    color white
    &.bold
      font-weight 700
    &.light
      font-weight 300
  .btnMore
    padding 20px 40px
    background none
    opacity 0.75
    border 3px solid white
    border-radius 12px
    outline none
    color white
    cursor pointer
    &:hover
      opacity 1
.title
  font-weight 600
  font-size 42px
  color #303030
  margin 40px 0
.servicesWrapper
  margin 0 -15px
  display flex
  flex-wrap wrap
  justify-content center
.services
  text-align center
  .servicesItem
    padding 10px
    height 220px
    width 220px
    cursor pointer
    text-decoration none
    &:nth-child(1), &:nth-child(4)
      border-bottom  1px solid #d2d2d2
    &:nth-child(2), &:nth-child(3)
      border-bottom  1px solid #d2d2d2
    &:nth-child(1), &:nth-child(2),&:nth-child(3)
      border-right 1px solid #d2d2d2
    &:nth-child(5),&:nth-child(6),&:nth-child(7)
      border-bottom 1px solid #d2d2d2
      border-right 1px solid #d2d2d2
    &:nth-child(8)
      border-bottom 1px solid #d2d2d2
    &:nth-child(9), &:nth-child(10), &:nth-child(11)
      border-right 1px solid #d2d2d2


    &:hover
      color white
      background-color #ef323b
      span.icon,.servicesText
        color white
    span.icon
      display inline-block
      font-size 120px
      color #ef323b
    .servicesText
      font-size 18px
      font-weight 400
      color #4f4f4f
  .servicesMore
    height 220px
    width 220px
    cursor pointer
    overflow hidden
    padding 50px 10px
    text-decoration none
    &:hover
      background #ef323b
      span
        color white
        &:after
          background-position 100% 0
    span
      color #f03e46
      font-size 18px
      font-weight 600
      text-decoration none
      &:after 
        content ""
        display inline-block
        vertical-align middle
        background url("../img/arrowMore.png") 0 0 no-repeat
        width 33px
        height 122px
.clients
  text-align center
  margin-top 30px
  align-items center
  .clientItem
      width 80%
      margin-bottom 30px
.about
  .leftBlockAbout
    padding-top 60px
  img
    width 100%
  .info
    position relative
    top -60px
  .titleAbout
    color #ef323b
    font-size 32px
    font-weight 600
    line-height 38px
    margin-bottom 15px
    display block
  .description
    font-size 14px
    line-height 24px
    color #3f3f3f
    font-weight 400
    padding-left 30px
    border-left  3px solid #ef323b
    display block
  .whatWeDo
    color #3f3f3f
    fpnt-size 14px
    line-height 24px
    font-weight 400
  .whatWeDoMore
    color #3f3f3f
    font-size 14px
    line-height 24px
    font-weight 600
    margin 15px 0 35px 0
    display block

.bottomQuestion
  text-align center
  align-items center
  display flex
  background #e9e9e9
  padding 40px 0
  button
    max-width 250px
  .startWork
    font-size 24px
    line-height 36px
    .bold
      font-weight 700

.footer
  background background linear-gradient(90deg, #4267af 0%,#2c4d8d 100%)
  padding 60px 0
  color white
  .bottomMenuLink
    text-decoration none
    font-size 18px
    font-weight 600
    line-height 40px
    color white
    &:hover
      color #b6b6b6
  .contactsTitle,.supportTitle, .socialTitle
    font-size 18px
    font-weight 400
    line-height 40px
  .contacts, .supportPhones, .supportMail
    font-size 14px
  .supportPhones
    color white
    text-decoration none
    &:hover
      color #b6b6b6
  .supportMail
    display inline-block
    margin-top 20px
    color white
    text-decoration none
    &:hover
      color #b6b6b6
  .socialLink
    text-decoration none
    color white
    font-size 60px
    &:hover
      color #b6b6b6

@media screen and (max-width: 1500px)
  .formConsult
    background url(../img/arrowBgForm.png) -300px 0/57% 100%, linear-gradient(135deg, #a2bbed 0%, #7198e1 100%) 0 0
    background-repeat: no-repeat;

@media screen and (max-width: 1199px)
  .phone
    font-size 16px
    line-height 30px
  .headerMenu
    ul
      li
        margin 0 4px
  .formConsult
    background url("../img/arrowBgForm.png") -300px 0/62% 100%, linear-gradient(135deg, #a2bbed 0%, #7198e1 100%) 0 0
    background-repeat: no-repeat;
  .formConsult .getConsultText
    font-size 18px

@media screen and (max-width: 991px)
  .about
    .titleBlock
      order -2
    .rightBlockAbout
      order -1
    .info
      top -25px
  .burger
    display inline-block
  .services
    .servicesItem
      &:nth-child(3),&:nth-child(6),&:nth-child(9)
        border-right 0
      &:nth-child(4),&:nth-child(8)
        border-right 1px solid #d2d2d2
      &:nth-child(9)
        border-bottom 1px solid #d2d2d2
  .formConsult
    background url("../img/arrowBgForm.png") -300px 0/80% 100%, linear-gradient(135deg, #a2bbed 0%, #7198e1 100%) 0 0
    background-repeat no-repeat
@media screen and (max-width: 767px)
  .formConsult
    background linear-gradient(135deg, #a2bbed 0%, #7198e1 100%) 0 0
  header
    padding 0
    .askQuestionButton
      width 50px
      border-radius 0
      font-size 0
      &.arrow:after
        content: "\e90a";
        font-family: "icomoon";
        font-size: 45px;
        color: white;
        font-weight: 400;
        margin-left 0
      &.cross
        background white
        color #ef323b
        border 3px solid #ef323b
        &:after
          content url("../img/redCross.png")
          position relative
          bottom 13px
  .footer
    text-align center
    .supportTitle
      margin-top 20px
      display inline-block
    .socialTitle
      font-size 0
  .services
    .servicesItem
      &:nth-child(odd)
        border-bottom 1px solid #d2d2d2
        border-right 1px solid #d2d2d2
      &:nth-child(11)
        border-bottom 0
      &:nth-child(even)
        border-bottom 1px solid #d2d2d2
        border-right 0

@media screen and (max-width: 575px)
  .logoImage
    max-width 180px
  .banner
    .care
      font-size 43px
  .about
    .leftBlockAbout
      padding-top 20px
    .titleAbout
      font-size 21px
      line-height 27px
    .description
      font-size 13px
      line-height 20px
    .info
      top -20px
@media screen and (max-width: 469px)
  .services
    .servicesItem
      height 210px
      width 160px
    .servicesMore
      height 210px
      width 160px
      span
        font-size 16px
        &:after
          content ""
          display inline-block
          vertical-align middle
          background url("../img/arrowMore.png") 0 0 no-repeat
          width 33px
          height 122px