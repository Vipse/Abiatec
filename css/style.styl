@import url('https://fonts.googleapis.com/css?family=Montserrat:300,400,600,700');
@font-face {
  font-family: 'icomoon';
  src:  url('fonts/icomoon.eot?g837v8');
  src:  url('fonts/icomoon.eot?g837v8#iefix') format('embedded-opentype'),
          url('fonts/icomoon.ttf?g837v8') format('truetype'),
          url('fonts/icomoon.woff?g837v8') format('woff'),
          url('fonts/icomoon.svg?g837v8#icomoon') format('svg');
  font-weight: normal;
  font-style: normal;
}

html, body, div, span, applet, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
a, abbr, acronym, address, big, cite, code,
del, dfn, em, img, ins, kbd, q, s, samp,
small, strike, strong, sub, sup, tt, var,
b, u, i, center,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td,
article, aside, canvas, details, embed,
figure, figcaption, footer, header, hgroup,
menu, nav, output, ruby, section, summary,
time, mark, audio, video
  margin 0
  padding 0
  border 0
  font-size 100%
  font inherit
  vertical-align baseline

/* HTML5 display-role reset for older browsers */
article, aside, details, figcaption, figure,
footer, header, hgroup, menu, nav, section
  display block

body
  line-height 1

ol, ul
  list-style none

blockquote, q
  quotes none

blockquote:before, blockquote:after, q:before, q:after
  content: ''
  content: none

table
  border-collapse collapse
  border-spacing 0

body
  font-family "Montserrat", sans-serif
  height 3000px

.jumbotron.header
  background white
  padding 0
  margin 0
  border-radius 0

header
  padding 20px 0
  align-items center
  background #fff
  .logoImage
    width 100%

.headerMenu
  padding-top 17px
  display flex
  justify-content center

  .burger
    display none
    cursor pointer
    width 50px
    height 50px
    background url("../img/burger.png")
    border none
    padding 0
    outline none
  ul
    display block
    li
      display inline-block
      margin 0 8px
      .menuLink
        color #393939
        font-size 18px
        text-decoration none

.phone
  display block
  font-weight 600
  font-size 19px
  line-height 36px
  color #303030
  text-decoration none

.askQuestion
  width 100%
  height 50px
  background #ef323b
  border-radius 10px
  border 0
  color white
  outline none
  font-weight 600
  cursor pointer
  font-size 16px
  &:after
    content url("../img/arrow.png")
    display inline-block
    margin-left 5px

.banner
  height 590px
  padding 130px 20px
  .care
    font-size 56px
    line-height 80px
    color white
    &.bold
      font-weight 700
    &.light
      font-weight 300
  .btnMore
    padding 20px 40px
    background none
    opacity 0.75
    border 3px solid white
    border-radius 12px
    outline none
    color white
    cursor pointer
    &:hover
      opacity 1


#rampage
  font-family: 'icomoon' !important;
  content "\e901"

@media screen and (max-width: 1200px)
  .phone
    font-size 16px
    line-height 30px

  .headerMenu
    ul
      li
        margin 0 4px

@media screen and (max-width: 992px)
  .headerMenu
    justify-content flex-end
    flex-direction column
    align-items flex-end
    padding-top 0
    .burger
      display inline-block
    ul
      display none
      text-align right
      margin-bottom 20px
      li
        display block
        padding 5px 0

@media screen and (max-width: 576px)
  .phones
    text-align center
    order 1