@import url('https://fonts.googleapis.com/css?family=Montserrat:300,400,600,700');
@font-face {
  font-family: 'icomoon';
  src:  url('fonts/icomoon.eot?g837v8');
  src:  url('fonts/icomoon.eot?g837v8#iefix') format('embedded-opentype'),
          url('fonts/icomoon.ttf?g837v8') format('truetype'),
          url('fonts/icomoon.woff?g837v8') format('woff'),
          url('fonts/icomoon.svg?g837v8#icomoon') format('svg');
  font-weight: normal;
  font-style: normal;
}

html, body, div, span, applet, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
a, abbr, acronym, address, big, cite, code,
del, dfn, em, img, ins, kbd, q, s, samp,
small, strike, strong, sub, sup, tt, var,
b, u, i, center,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td,
article, aside, canvas, details, embed,
figure, figcaption, footer, header, hgroup,
menu, nav, output, ruby, section, summary,
time, mark, audio, video
  margin 0
  padding 0
  border 0
  font-size 100%
  font inherit
  vertical-align baseline

/* HTML5 display-role reset for older browsers */
article, aside, details, figcaption, figure,
footer, header, hgroup, menu, nav, section
  display block

body
  line-height 1

ol, ul
  list-style none

blockquote, q
  quotes none

blockquote:before, blockquote:after, q:before, q:after
  content: ''
  content: none

table
  border-collapse collapse
  border-spacing 0

body
  font-family "Montserrat", sans-serif

.jumbotron.header
  background white
  padding 0
  margin 0
  border-radius 0

header
  padding 20px 0
  align-items center
  background #fff
  .logoImage
    width 100%

.headerMenu
  padding-top 17px
  display flex
  justify-content center

  .burger
    display none
    cursor pointer
    width 50px
    height 50px
    background url("../img/burger.png")
    border none
    padding 0
    outline none
  ul
    display block
    li
      display inline-block
      margin 0 8px
      .menuLink
        color #393939
        font-size 18px
        text-decoration none

.phone
  display block
  font-weight 600
  font-size 19px
  line-height 36px
  color #303030
  text-decoration none

.askQuestionButton
  width 100%
  height 50px
  background #ef323b
  border-radius 10px
  border 0
  color white
  outline none
  font-weight 600
  cursor pointer
  font-size 16px
  &.arrow:after
    content url("../img/arrow.png")
    display inline-block
    margin-left 5px

.banner
  height 590px
  padding 130px 20px
  .care
    font-size 56px
    line-height 80px
    color white
    &.bold
      font-weight 700
    &.light
      font-weight 300
  .btnMore
    padding 20px 40px
    background none
    opacity 0.75
    border 3px solid white
    border-radius 12px
    outline none
    color white
    cursor pointer
    &:hover
      opacity 1
.title
  font-weight 600
  font-size 42px
  color #303030
  margin 40px 0
.services
  text-align center
  .servicesItem
    padding 10px
    height 100%
    &:hover
      color white
      background-color #ef323b
      cursor pointer
      a,.servicesText
        color white
    a
      text-decoration none
      font-size 120px
      color #ef323b
    .servicesText
      font-size 18px
      font-weight 400
      color #4f4f4f
  .servicesMore
    height 100%
    cursor pointer
    overflow hidden
    padding 40px 10px
    &:hover
      background #ef323b
      a
        color white
        &:after
          background-position 100% 0
    a
      color #4f4f4f
      text-decoration none
      &:after 
        content ""
        display inline-block
        vertical-align middle
        background url("../img/arrowMore.png") 0 0 no-repeat
        width 33px
        height 122px
.clients
  text-align center
  margin-top 30px
  align-items center
  .clientItem
      width 80%
      margin-bottom 30px
.about
  .leftBlockAbout
    padding-top 60px
  img
    width 100%
  .info
    position relative
    top -60px
  .titleAbout
    color #ef323b
    font-size 32px
    font-weight 600
    line-height 38px
    margin-bottom 15px
    display block
  .description
    font-size 14px
    line-height 24px
    color #3f3f3f
    font-weight 400
    padding-left 30px
    border-left  3px solid #ef323b
    display block
  .whatWeDo
    color #3f3f3f
    fpnt-size 14px
    line-height 24px
    font-weight 400
  .whatWeDoMore
    color #3f3f3f
    font-size 14px
    line-height 24px
    font-weight 600
    margin 15px 0 35px 0
    display block

.askQuestionBottom
  text-align center
  align-items center
  display flex
  button
    max-width 250px
  .startWork
    font-size 24px
    line-height 36px
    .bold
      font-weight 700


@media screen and (max-width: 1199px)
  .phone
    font-size 16px
    line-height 30px

  .headerMenu
    ul
      li
        margin 0 4px

@media screen and (max-width: 991px)
  .headerMenu
    justify-content flex-end
    flex-direction column
    align-items flex-end
    padding-top 0
    .burger
      display inline-block
    ul
      display none
      text-align right
      margin-bottom 20px
      li
        display block
        padding 5px 0
  .about
    .titleBlock
      order -2
    .rightBlockAbout
      order -1

@media screen and (max-width: 575px)
  .phones
    text-align center
    order 1
  .banner
    .care
      font-size 43px
  .about
    .leftBlockAbout
      padding-top 20px
    .titleAbout
      font-size 21px
      line-height 27px
    .description
      font-size 13px
      line-height 20px
